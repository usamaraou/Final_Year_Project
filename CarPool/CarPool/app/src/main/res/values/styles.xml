<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:textColorHint">#757575</item>
        <item name="colorButtonNormal">@color/ButtonColor</item>
        <item name="colorControlActivated">@color/ButtonColor</item>
        <item name="android:editTextColor">#ffffff</item>
    </style>
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
    </style>
    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#ffd600</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#0091ea</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#c51162</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="SearchViewStyle" parent="@style/Widget.AppCompat.SearchView">
        <item name="android:editTextColor">#000000</item>
    </style>



</resources>
